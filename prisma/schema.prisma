generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id     String @id @default(cuid())
  name   String
  author String
  ISBN   String

  // keys
  authorID   String
  genreID    String
  memberID   String // member that currently has this book checked out 
  //relations
  bookAuthor Author @relation(fields: [authorID], references: [id])
  bookGenre  Genre  @relation(fields: [genreID], references: [id])
  bookMember Member @relation(fields: [memberID], references: [id])
}

model Author {
  id        String @id @default(cuid())
  name      String
  biography String
  Book      Book[]
}

model Genre {
  id   String @id @default(cuid())
  name String
  Book Book[]
}

model Member {
  id      String @id @default(cuid())
  name    String
  email   String
  address String
  Book    Book[]
}
