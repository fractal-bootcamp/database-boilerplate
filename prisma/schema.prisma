generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id       Int    @id @default(autoincrement())
  title    String
  isbn     Int
  authorId Int
  memberId Int

  // relationships
  author Author @relation(fields: [authorId], references: [id])
  member Member @relation(fields: [memberId], references: [id])

  genre Genre[]
}

model Author {
  id        Int    @id @default(autoincrement())
  name      String
  biography String

  // relationships
  books Book[]
}

model Genre {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

model Member {
  id      Int    @id @default(autoincrement())
  name    String
  email   String @unique
  address String

  books Book[]
}
